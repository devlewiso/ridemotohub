<style>
    body {
        overflow-x: hidden;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    /* Page Hero */
    .page-hero {
        background: linear-gradient(
            135deg,
            hsl(220, 100%, 97%) 0%,
            hsl(200, 100%, 96%) 100%
        );
        padding: 6rem 2rem 4rem;
        text-align: center;
    }

    .hero-content {
        max-width: 800px;
        margin: 0 auto;
    }

    .hero-badge {
        display: inline-block;
        padding: 0.5rem 1.5rem;
        background: linear-gradient(
            135deg,
            hsl(220, 90%, 56%),
            hsl(260, 90%, 60%)
        );
        color: white;
        border-radius: 50px;
        font-size: 0.9rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        box-shadow: 0 4px 20px rgba(37, 99, 235, 0.3);
    }

    .page-hero h1 {
        font-size: clamp(2.5rem, 6vw, 4rem);
        font-weight: 900;
        margin: 0 0 1rem 0;
        color: rgb(var(--black));
    }

    .page-hero p {
        font-size: clamp(1rem, 2vw, 1.3rem);
        color: rgb(var(--gray));
        margin: 0;
    }

    /* Events Section */
    .events-section {
        padding: 4rem 0;
        background: white;
    }

    .section-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .section-header h2 {
        font-size: 2.5rem;
        font-weight: 800;
        margin: 0 0 0.5rem 0;
        color: rgb(var(--black));
    }

    .section-header p {
        font-size: 1.2rem;
        color: rgb(var(--gray));
        margin: 0;
    }

    .events-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
        margin-bottom: 4rem;
        max-width: 900px;
        margin-left: auto;
        margin-right: auto;
    }

    /* Event Card - New Design */
    .event-card {
        background: white;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        border: 2px solid hsl(220, 100%, 95%);
    }

    .event-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 40px rgba(37, 99, 235, 0.15);
        border-color: hsl(220, 90%, 56%);
    }

    .event-image {
        position: relative;
        background: linear-gradient(
            135deg,
            hsl(220, 90%, 56%) 0%,
            hsl(260, 90%, 60%) 100%
        );
        height: 200px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .event-badge {
        position: absolute;
        top: 1rem;
        right: 1rem;
        background: rgba(255, 255, 255, 0.25);
        backdrop-filter: blur(10px);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-size: 0.85rem;
        font-weight: 600;
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .event-date-box {
        display: flex;
        flex-direction: column;
        align-items: center;
        color: white;
    }

    .date-day {
        font-size: 4rem;
        font-weight: 900;
        line-height: 1;
        text-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

    .date-month {
        font-size: 1.5rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 2px;
        text-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    }

    .event-body {
        padding: 2rem;
    }

    .event-title {
        font-size: 1.8rem;
        font-weight: 800;
        margin: 0 0 1.5rem 0;
        color: rgb(var(--black));
        line-height: 1.3;
    }

    .event-meta {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        margin-bottom: 1.5rem;
    }

    .meta-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.95rem;
        color: rgb(var(--gray));
        font-weight: 500;
    }

    .meta-item svg {
        flex-shrink: 0;
        opacity: 0.7;
    }

    .event-description {
        font-size: 1.05rem;
        line-height: 1.7;
        color: rgb(var(--gray-dark));
        margin-bottom: 1.5rem;
    }

    .event-highlights-preview {
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem;
        margin-bottom: 2rem;
    }

    .highlight-tag {
        display: inline-block;
        padding: 0.5rem 1rem;
        background: linear-gradient(
            135deg,
            hsl(220, 100%, 98%) 0%,
            hsl(220, 100%, 96%) 100%
        );
        border: 1px solid hsl(220, 100%, 90%);
        border-radius: 50px;
        font-size: 0.85rem;
        font-weight: 600;
        color: rgb(var(--gray-dark));
    }

    .event-footer {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding-top: 1.5rem;
        border-top: 2px solid hsl(220, 100%, 95%);
        gap: 1rem;
        flex-wrap: wrap;
    }

    .event-price {
        display: flex;
        flex-direction: column;
    }

    .price-label {
        font-size: 0.85rem;
        color: rgb(var(--gray));
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-weight: 600;
    }

    .price-value {
        font-size: 1.5rem;
        font-weight: 900;
        color: hsl(120, 60%, 40%);
    }

    .btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 1rem 2rem;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1rem;
        text-decoration: none;
        transition: all 0.3s ease;
        cursor: pointer;
        border: 2px solid transparent;
    }

    .btn-primary {
        background: linear-gradient(
            135deg,
            hsl(220, 90%, 56%),
            hsl(260, 90%, 60%)
        );
        color: white;
        box-shadow: 0 4px 15px rgba(37, 99, 235, 0.3);
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(37, 99, 235, 0.4);
    }

    .btn-primary svg {
        transition: transform 0.3s ease;
    }

    .btn-primary:hover svg {
        transform: translateX(4px);
    }

    /* Past Events */
    .past-events {
        margin: 4rem 0;
    }

    .past-events h2 {
        font-size: 2rem;
        font-weight: 800;
        margin: 0 0 2rem 0;
        color: rgb(var(--black));
        text-align: center;
    }

    .past-events-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin-bottom: 3rem;
    }

    .past-event {
        border-radius: 15px;
        overflow: hidden;
        background: hsl(220, 100%, 98%);
        border: 2px solid hsl(220, 100%, 95%);
        transition: all 0.3s ease;
    }

    .past-event:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(37, 99, 235, 0.15);
    }

    .past-event img {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    .past-event-content {
        padding: 1.5rem;
    }

    .past-event-content h4 {
        font-size: 1.2rem;
        font-weight: 700;
        margin: 0 0 0.5rem 0;
        color: rgb(var(--black));
    }

    .past-event-content p {
        color: rgb(var(--gray));
        margin: 0;
        font-size: 0.9rem;
    }

    /* CTA Box */
    .cta-box {
        background: linear-gradient(
            135deg,
            hsl(220, 90%, 56%) 0%,
            hsl(260, 90%, 60%) 100%
        );
        color: white;
        padding: 3rem;
        border-radius: 20px;
        text-align: center;
        box-shadow: 0 10px 40px rgba(37, 99, 235, 0.3);
    }

    .cta-box h3 {
        font-size: 2rem;
        font-weight: 800;
        margin: 0 0 1rem 0;
    }

    .cta-box p {
        font-size: 1.1rem;
        margin: 0 0 2rem 0;
        opacity: 0.95;
    }

    .btn-cta {
        background: white;
        color: hsl(220, 90%, 56%);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
    }

    .btn-cta:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3);
    }

    /* Responsive */
    @media (max-width: 768px) {
        .page-hero {
            padding: 4rem 1.5rem 3rem;
        }

        .events-section {
            padding: 3rem 0;
        }

        .events-grid {
            grid-template-columns: 1fr;
        }

        .event-image {
            height: 180px;
        }

        .date-day {
            font-size: 3rem;
        }

        .date-month {
            font-size: 1.2rem;
        }

        .event-title {
            font-size: 1.5rem;
        }

        .event-footer {
            flex-direction: column;
            align-items: stretch;
        }

        .btn {
            width: 100%;
            justify-content: center;
        }

        .past-events-grid {
            grid-template-columns: 1fr;
        }

        .cta-box {
            padding: 2rem 1.5rem;
        }
    }
</style>
