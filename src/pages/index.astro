<style>
	/* Reset and Base */
	body {
		overflow-x: hidden;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	/* Hero Section */
	.hero {
		position: relative;
		min-height: 90vh;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 4rem 2rem;
		overflow: hidden;
		background: linear-gradient(
			135deg,
			hsl(220, 100%, 97%) 0%,
			hsl(220, 100%, 95%) 50%,
			hsl(200, 100%, 96%) 100%
		);
	}

	.hero-content {
		position: relative;
		z-index: 2;
		text-align: center;
		max-width: 800px;
		animation: fadeInUp 1s ease-out;
	}

	.hero-badge {
		display: inline-block;
		padding: 0.5rem 1.5rem;
		background: linear-gradient(
			135deg,
			hsl(220, 90%, 56%),
			hsl(260, 90%, 60%)
		);
		color: white;
		border-radius: 50px;
		font-size: 0.9rem;
		font-weight: 600;
		margin-bottom: 2rem;
		box-shadow: 0 4px 20px rgba(37, 99, 235, 0.3);
		animation: pulse 2s ease-in-out infinite;
	}

	.hero-title {
		font-size: clamp(3rem, 8vw, 5.5rem);
		font-weight: 900;
		margin: 0 0 1.5rem 0;
		line-height: 1.1;
	}

	.gradient-text {
		background: linear-gradient(
			135deg,
			hsl(220, 90%, 56%) 0%,
			hsl(260, 90%, 60%) 50%,
			hsl(280, 90%, 65%) 100%
		);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		animation: gradientShift 3s ease infinite;
	}

	.hero-subtitle {
		font-size: clamp(1.3rem, 3vw, 1.8rem);
		color: rgb(var(--gray-dark));
		margin: 0 0 1rem 0;
		font-weight: 600;
	}

	.hero-description {
		font-size: clamp(1rem, 2vw, 1.2rem);
		color: rgb(var(--gray));
		margin: 0 0 3rem 0;
		line-height: 1.6;
		max-width: 600px;
		margin-left: auto;
		margin-right: auto;
	}

	.hero-cta {
		display: flex;
		gap: 1rem;
		justify-content: center;
		flex-wrap: wrap;
	}

	/* Buttons */
	.btn {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		padding: 1rem 2rem;
		border-radius: 12px;
		font-weight: 600;
		font-size: 1rem;
		text-decoration: none;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		cursor: pointer;
		border: 2px solid transparent;
	}

	.btn-primary {
		background: linear-gradient(
			135deg,
			hsl(220, 90%, 56%),
			hsl(260, 90%, 60%)
		);
		color: white;
		box-shadow: 0 4px 20px rgba(37, 99, 235, 0.4);
	}

	.btn-primary:hover {
		transform: translateY(-2px);
		box-shadow: 0 8px 30px rgba(37, 99, 235, 0.5);
	}

	.btn-secondary {
		background: white;
		color: hsl(220, 90%, 56%);
		border-color: hsl(220, 90%, 56%);
		box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
	}

	.btn-secondary:hover {
		background: hsl(220, 90%, 56%);
		color: white;
		transform: translateY(-2px);
	}

	.btn-outline {
		background: transparent;
		color: white;
		border-color: white;
	}

	.btn-outline:hover {
		background: white;
		color: hsl(220, 90%, 56%);
	}

	.btn-large {
		padding: 1.25rem 2.5rem;
		font-size: 1.1rem;
	}

	/* Hero Decoration */
	.hero-decoration {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		pointer-events: none;
		z-index: 1;
	}

	.decoration-circle {
		position: absolute;
		border-radius: 50%;
		background: linear-gradient(
			135deg,
			hsla(220, 90%, 56%, 0.1),
			hsla(260, 90%, 60%, 0.1)
		);
		animation: float 6s ease-in-out infinite;
	}

	.circle-1 {
		width: 400px;
		height: 400px;
		top: -100px;
		right: -100px;
		animation-delay: 0s;
	}

	.circle-2 {
		width: 300px;
		height: 300px;
		bottom: -50px;
		left: -50px;
		animation-delay: 2s;
	}

	.circle-3 {
		width: 200px;
		height: 200px;
		top: 50%;
		left: 10%;
		animation-delay: 4s;
	}

	/* Features Section */
	.features {
		padding: 6rem 0;
		background: white;
	}

	.section-title {
		text-align: center;
		font-size: clamp(2rem, 5vw, 3rem);
		font-weight: 800;
		margin: 0 0 1rem 0;
		color: rgb(var(--black));
	}

	.section-subtitle {
		text-align: center;
		font-size: clamp(1rem, 2vw, 1.3rem);
		color: rgb(var(--gray));
		margin: 0 0 4rem 0;
		max-width: 600px;
		margin-left: auto;
		margin-right: auto;
	}

	.features-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
		margin-top: 3rem;
	}

	.feature-card {
		padding: 2.5rem;
		background: linear-gradient(
			135deg,
			hsl(220, 100%, 98%) 0%,
			hsl(220, 100%, 96%) 100%
		);
		border-radius: 20px;
		border: 2px solid hsl(220, 100%, 95%);
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		cursor: pointer;
	}

	.feature-card:hover {
		transform: translateY(-8px);
		box-shadow: 0 20px 40px rgba(37, 99, 235, 0.15);
		border-color: hsl(220, 90%, 56%);
	}

	.feature-icon {
		font-size: 3rem;
		margin-bottom: 1.5rem;
		display: inline-block;
		animation: bounce 2s ease-in-out infinite;
	}

	.feature-card:hover .feature-icon {
		animation: none;
		transform: scale(1.1);
		transition: transform 0.3s ease;
	}

	.feature-card h3 {
		font-size: 1.5rem;
		font-weight: 700;
		margin: 0 0 1rem 0;
		color: rgb(var(--black));
	}

	.feature-card p {
		color: rgb(var(--gray));
		line-height: 1.7;
		margin: 0;
	}

	/* Stats Section */
	.stats {
		padding: 5rem 0;
		background: linear-gradient(
			135deg,
			hsl(220, 90%, 56%) 0%,
			hsl(260, 90%, 60%) 100%
		);
		color: white;
	}

	.stats-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 3rem;
		text-align: center;
	}

	.stat-item {
		animation: fadeInUp 1s ease-out;
	}

	.stat-number {
		font-size: clamp(2.5rem, 5vw, 4rem);
		font-weight: 900;
		margin-bottom: 0.5rem;
		text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
	}

	.stat-label {
		font-size: clamp(1rem, 2vw, 1.2rem);
		opacity: 0.95;
		font-weight: 500;
	}

	/* CTA Section */
	.cta-section {
		padding: 6rem 0;
		background: linear-gradient(
			135deg,
			hsl(220, 100%, 97%) 0%,
			hsl(260, 100%, 97%) 100%
		);
	}

	.cta-content {
		text-align: center;
		max-width: 700px;
		margin: 0 auto;
	}

	.cta-content h2 {
		font-size: clamp(2rem, 5vw, 3rem);
		font-weight: 800;
		margin: 0 0 1.5rem 0;
		color: rgb(var(--black));
	}

	.cta-content p {
		font-size: clamp(1rem, 2vw, 1.3rem);
		color: rgb(var(--gray));
		margin: 0 0 2.5rem 0;
		line-height: 1.7;
	}

	.cta-buttons {
		display: flex;
		gap: 1rem;
		justify-content: center;
		flex-wrap: wrap;
	}

	/* Animations */
	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(30px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes float {
		0%,
		100% {
			transform: translateY(0) scale(1);
		}
		50% {
			transform: translateY(-20px) scale(1.05);
		}
	}

	@keyframes pulse {
		0%,
		100% {
			transform: scale(1);
		}
		50% {
			transform: scale(1.05);
		}
	}

	@keyframes bounce {
		0%,
		100% {
			transform: translateY(0);
		}
		50% {
			transform: translateY(-10px);
		}
	}

	@keyframes gradientShift {
		0%,
		100% {
			background-position: 0% 50%;
		}
		50% {
			background-position: 100% 50%;
		}
	}

	/* Responsive */
	@media (max-width: 768px) {
		.hero {
			min-height: 80vh;
			padding: 3rem 1.5rem;
		}

		.features {
			padding: 4rem 0;
		}

		.features-grid {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}

		.stats {
			padding: 3rem 0;
		}

		.stats-grid {
			gap: 2rem;
		}

		.cta-section {
			padding: 4rem 0;
		}

		.cta-buttons {
			flex-direction: column;
		}

		.btn {
			width: 100%;
			justify-content: center;
		}
	}
</style>
